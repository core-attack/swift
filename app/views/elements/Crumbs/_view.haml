    %a{:href => p.path}<
      - if p[:title].to_s.include? "#"
        - if session[:language].eql? "en-US"
          = p[:title].to_s.split('#')[1]
        - else
          = p[:title].to_s.split('#')[0]
      - else
        = p[:title].to_s
    - if (i != @swift[:path_pages].length - 1)
