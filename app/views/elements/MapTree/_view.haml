- tree ||= @tree
%ul.nav.nav-list
  - tree.each do |leaf|
    - if leaf[:title]
      %li{ :class => leaf[:class] }
        %a{ :href => leaf[:href], :class => leaf[:class] }
          - if leaf[:title].to_s.include? "#"
            - if session[:language].eql? "en-US"
              = leaf[:title].to_s.split('#')[1]
            - else
              = leaf[:title].to_s.split('#')[0]
          - else
            = leaf[:title].to_s
          
        - if leaf[:child].any?
          = partial 'elements/MapTree/view', :locals => { :tree => leaf[:child] }
